<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.goggle.android.material.appbar.AppBarLayout
        android:layout_wigth="match_parent"
        android:layout_height="wrap_content"
       android:background="@color/colorPrimary"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tittleTextColor="@android:color/white"
            app:title="RoalChat"/>
    </com.goggle.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabIndicator="@color/colorPrimary"
        app:tabIndicatorNeight="?actionBarSize"
        app:tabSelectedTextColor="@android:color/white"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabTextColor="@color/colorPrimary">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.PagerTabStrip
        android.id="@id/view_pager"
        android.visibility="visible"
        android:layout_behavior="@string/appbar_scrolling-view-behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
</layout>